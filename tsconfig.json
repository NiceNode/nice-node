{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "ES6"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    // skip because github's macos-latest was checking lib types
    "skipLibCheck": true,

    // todo: when using electron apis in e2e tests
    // "types": ["@wdio/globals/types", "wdio-electron-service", "@wdio/types"],
    // "typeRoots": ["./node_modules", "./node_modules/@types", "./@types"]
    // Electron forge
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "exclude": [
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "storybook-static",
    ".eslintrc.js"
    // "src/main/util/timestamp.js"
  ],
  /////// forge default ///////////
  /////////////////////////////////
  "include": ["src/**/*"]

  // "compilerOptions": {
  //   "target": "ES6",
  //   "allowJs": true,
  //   "module": "commonjs",
  //   "skipLibCheck": true,
  //   "esModuleInterop": true,
  //   "noImplicitAny": true,
  //   "sourceMap": true,
  //   "baseUrl": ".",
  //   "outDir": "dist",
  //   "moduleResolution": "node",
  //   "resolveJsonModule": true,
  //   "paths": {
  //     "*": ["node_modules/*"]
  //   },
  //   "jsx": "react-jsx"
  // },
}
