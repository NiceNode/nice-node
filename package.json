{
  "name": "nice-node",
  "description": "An app to easily run an Ethereum node",
  "productName": "NiceNode",
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts && opencollective-postinstall",
    "start-hot-reload": "ts-node ./.erb/scripts/check-port-in-use.js && HOT_RELOAD=true npm run start:renderer",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start-auto-start-node": "ts-node ./.erb/scripts/check-port-in-use.js && cross-env NN_AUTOSTART_NODE=true npm run start:renderer",
    "start:main-hot-reload": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only ./src/main/main.ts",
    "start:main": "cross-env NODE_ENV=development electron -r ts-node/register/transpile-only ./src/main/main.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "jest",
    "test-dev": "jest  --watch --verbose",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "NiceNode",
    "appId": "org.jgr.NiceNode",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "jgresham",
      "repo": "nice-node"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgresham/nice-node.git"
  },
  "author": {
    "name": "jgresham"
  },
  "license": "MIT",
  "jest": {
    "testURL": "http://localhost/",
    "projects": [
      {
        "displayName": "renderer tests (react)",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/__tests__/react/**/*.test.[jt]s?(x)",
          "**/react/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "moduleNameMapper": {
          "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
          "\\.(css|less|sass|scss)$": "identity-obj-proxy"
        },
        "transform": {
          "\\.(ts|tsx|js|jsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
          "js",
          "jsx",
          "ts",
          "tsx",
          "json"
        ],
        "moduleDirectories": [
          "node_modules",
          "release/app/node_modules"
        ],
        "testPathIgnorePatterns": [
          "release/app/dist",
          "release/build/"  
        ],
        "setupFiles": [
          "./.erb/scripts/check-build-exists.ts"
        ]
      },
      {
        "displayName": "main tests (node)",
        "testEnvironment": "node",
        "testMatch": [
          "**/__tests__/node/**/*.test.[jt]s?(x)",
          "**/node/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "transform": {
          "\\.(ts|js)$": "ts-jest"
        },
        "moduleFileExtensions": [
          "js",
          "ts",
          "json"
        ],
        "moduleDirectories": [
          "node_modules",
          "release/app/node_modules"
        ],
        "testPathIgnorePatterns": [
          "release/app/dist",
          "release/build/"
        ],
        "setupFiles": [
          "./.erb/scripts/check-build-exists.ts"
        ]
      }
    ]
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.4",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "17.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.25",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^6.5.1",
    "core-js": "^3.20.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "detect-port": "^1.3.0",
    "electron": "^16.0.5",
    "electron-builder": "22.13.1",
