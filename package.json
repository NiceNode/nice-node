{
  "name": "nice-node",
  "version": "5.1.0-alpha",
  "description": "Run a node at home, the easy way.",
  "homepage": "https://nicenode.xyz",
  "productName": "NiceNode",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "vvvvvvvvvvvvv": "vvvvvvvvvvvvv",
    "test": "jest",
    "test-precommit": "jest --testPathIgnorePatterns geth release/app/dist",
    "test-dev": "jest  --watch --detectOpenHandles --verbose",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "wdio": "cross-env NODE_ENV=test wdio run ./wdio.conf.ts",
    "docs:nodeSpec": "typedoc --plugin typedoc-plugin-markdown --name \"Node Spec examples\" --readme src/common/index.md --entryDocument index.md --out docs src/common/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "NiceNode",
    "appId": "org.jgr.NiceNode",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "notarize": "false",
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 180,
          "y": 195
        },
        {
          "x": 462,
          "y": 195,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 640,
        "height": 432
      },
      "icon": "installer.icns",
      "title": "${productName} ${version} installer"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "rpm",
        "pacman",
        "dir",
        "zip"
      ],
      "synopsis": "Run a node at home, the easy way.",
      "description": "By running a node you become part of a global movement to decentralize a world of information. Prevent leaking your personal data to third party nodes. Ensure access when you need it, and don't be censored. Decentralization starts with you. Voice your choice, help your peers.",
      "category": "Network",
      "icon": "icons",
      "maintainer": "NiceNode <johnsgresham@skiff.com>"
    },
    "snap": {
      "base": "core22",
      "confinement": "classic",
      "publish": {
        "provider": "github",
        "owner": "jgresham",
        "repo": "nice-node"
      }
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**",
      {
        "from": "src/common/NodeSpecs",
        "to": "NodeSpecs"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "NiceNode",
        "repo": "nice-node"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiceNode/nice-node.git"
  },
  "author": {
    "name": "Johns Gresham",
    "email": "johnsgresham@skiff.com",
    "url": "http://nicenode.xyz"
  },
  "license": "MIT",
  "keywords": [
    "ethereum",
    "node",
    "blockchain",
    "web3",
    "local"
  ],
  "jest": {
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "projects": [
      {
        "displayName": "renderer tests (react)",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/__tests__/react/**/*.test.[jt]s?(x)",
          "**/react/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "moduleNameMapper": {
          "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
          "\\.svg": "<rootDir>/src/renderer/__mocks__/svg.ts",
          "(reset.css|.less|.sass|.scss)$": "identity-obj-proxy"
        },
        "transform": {
          "\\.((?<!css.)ts|tsx|js|jsx)$": "ts-jest",
          "\\.css\\.ts$": "@vanilla-extract/jest-transform"
        },
        "moduleFileExtensions": [
          "js",
          "jsx",
          "ts",
          "tsx",
          "json"
        ],
        "moduleDirectories": [
          "node_modules",
          "release/app/node_modules"
        ],
        "testPathIgnorePatterns": [
          "release/app/dist"
        ],
        "setupFiles": [
          "./.erb/scripts/check-build-exists.ts"
        ]
      },
      {
        "displayName": "main tests (node)",
        "testEnvironment": "node",
        "testMatch": [
          "**/__tests__/node/**/*.test.[jt]s?(x)",
          "**/node/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "transform": {
          "\\.(ts|js)$": "ts-jest"
        },
        "moduleFileExtensions": [
          "js",
          "ts",
          "json"
        ],
        "moduleDirectories": [
          "node_modules",
          "release/app/node_modules"
        ],
        "testPathIgnorePatterns": [
          "release/app/dist"
        ],
        "setupFiles": [
          "./.erb/scripts/check-build-exists.ts"
        ]
      }
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.1",
    "@electron-forge/maker-deb": "^7.3.1",
    "@electron-forge/maker-dmg": "^7.3.1",
    "@electron-forge/maker-rpm": "^7.3.1",
    "@electron-forge/maker-squirrel": "^7.3.1",
    "@electron-forge/maker-zip": "^7.3.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.1",
    "@electron-forge/plugin-fuses": "^7.3.1",
    "@electron-forge/plugin-vite": "^7.3.1",
    "@electron-forge/plugin-webpack": "^7.3.1",
    "@electron-forge/publisher-github": "^7.3.1",
    "@electron-forge/shared-types": "^7.3.1",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.4.1",
    "@mdx-js/react": "^2.1.5",
    "@storybook/addon-actions": "^7.5.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/addon-mdx-gfm": "^7.5.3",
    "@storybook/react": "^7.5.1",
    "@storybook/react-webpack5": "^7.5.1",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/du": "^1.0.3",
