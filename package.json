  },
  "devEngines": {
    "node": ">=20.x",
    "npm": ">=9.x"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ],
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslint.json"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": true
  }
