{
  "specId": "hubble",
  "version": "1.0.0",
  "displayName": "Hubble",
  "displayTagline" : "A fast, simple implementation of a Farcaster Hub in Typescript + Rust",
  "execution": {
    "executionTypes": ["docker"],
    "defaultExecutionType": "docker",
    "input": {
      "defaultConfig": {
      },
      "docker": {
        "containerVolumePath": "/home/node/app/apps/hubble",
        "raw": "",
        "forcedRawNodeInput": "node --no-warnings build/cli.js start --ip 0.0.0.0"
      }
    },
    "imageName": "docker.io/farcasterxyz/hubble:latest"
  },
  "category": "L1/Hub",
  "rpcTranslation": "farcaster-l1",
  "systemRequirements": {
    "documentationUrl": "https://www.thehubble.xyz/intro/install.html#requirements",
    "cpu": {
      "cores": 2
    },
    "memory": {
      "minSizeGBs": 8
    },
    "storage": {
      "minSizeGBs": 20,
      "ssdRequired": true
    },
    "docker": {
      "required": true
    }
  },
  "configTranslation": {
    "ethMainnetRpcUrl": {
      "displayName": "Ethereum mainnet RPC URL (local node or alchemy/infura/etc.)",
      "cliConfigPrefix": "--eth-mainnet-rpc-url ",
      "defaultValue": "http://host.internal.containers:8545",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://www.thehubble.xyz/intro/install.html#install-via-docker"
    },
    "optimismMainnetRpcUrl": {
      "displayName": "Optimism mainnet RPC URL (local node or alchemy/infura/etc.)",
      "cliConfigPrefix": "--l2-rpc-url ",
      "defaultValue": "http://host.internal.containers:8547",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://www.thehubble.xyz/intro/install.html#install-via-docker"
    },
    "hubOperatorFid": {
      "displayName": "Set this to your Farcaster FID ",
      "cliConfigPrefix": "--hub-operator-fid ",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://www.thehubble.xyz/intro/install.html#install-via-docker"
    },
    "p2pPorts": {
      "displayName": "P2P port (UDP and TCP)",
      "cliConfigPrefix": "--gossip-port ",
      "uiControl": {
        "type": "text"
      },
      "infoDescription": "Example value: 2282",
      "defaultValue": "2282"
    },
    "httpPort": {
      "displayName": "HTTP-RPC server listening port",
      "cliConfigPrefix": "--rpc-port ",
      "defaultValue": "2283",
      "uiControl": {
        "type": "text"
      },
      "infoDescription": "Example value: 2283"
    },
    "boostrapNode": {
      "displayName": "A Farcaster node to boostrap peer discovery",
      "cliConfigPrefix": "-b ",
      "defaultValue": "/dns/nemes.farcaster.xyz/tcp/2282",
      "uiControl": {
        "type": "text"
      },
      "infoDescription": "Example value: /dns/nemes.farcaster.xyz/tcp/2282"
    },
    "farcasterNetwork": {
      "displayName": "The Farcaster network ID (mainnet or testnet)",
      "cliConfigPrefix": "--network ",
      "defaultValue": "1",
      "uiControl": {
        "type": "text"
      },
      "infoDescription": "Example value: 1"
    }
  },
  "iconUrl": "https://avatars.githubusercontent.com/u/98775309"
}
