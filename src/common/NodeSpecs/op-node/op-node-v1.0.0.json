{
  "specId": "op-node",
  "version": "1.0.0",
  "displayName": "OP Node",
  "execution": {
    "executionTypes": ["docker"],
    "defaultExecutionType": "docker",
    "input": {
      "defaultConfig": {
        "l1": "https://mainnet.infura.io/v3/97fa4206f9bd4ea9957f9a82a2b2e4d0",
        "l2": "http://host.containers.internal:8553",
        "l1TrustRpc": "Enabled",
        "httpPort" : "8549",
        "p2pPorts" : "9222",
        "verifierL1Confs": "4"
      },
      "docker": {
        "containerVolumePath": "/root/.ethereum",
        "raw": "",
        "forcedRawNodeInput": "op-node --rpc.addr 0.0.0.0 --l2.jwt-secret /root/.ethereum/jwtsecret --rollup.config /root/.ethereum/rollup.json"
      }
    },
    "imageName": "us-docker.pkg.dev/oplabs-tools-artifacts/images/op-node:v1.1.3"
  },
  "category": "L2/ConsensusClient",
  "rpcTranslation": "eth-l2-consensus",
  "systemRequirements": {
    "documentationUrl": "https://geth.ethereum.org/docs/interface/hardware",
    "cpu": {
      "cores": 4
    },
    "memory": {
      "minSizeGBs": 16
    },
    "storage": {
      "minSizeGBs": 1600,
      "ssdRequired": true
    },
    "internet": {
      "minDownloadSpeedMbps": 25,
      "minUploadSpeedMbps": 10
    },
    "docker": {
      "required": true
    }
  },
  "configTranslation": {
    "l1TrustRpc": {
      "displayName": "Trust the L1 RPC connection",
      "uiControl": {
        "type": "select/single",
        "controlTranslations": [
          {
            "value": "Enabled",
            "config": "--l1.trustrpc"
          },
          {
            "value": "Disabled"
          }
        ]
      },
      "defaultValue": "Enabled",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "l1": {
      "displayName": "Ethereum Mainnet RPC Endpoint (local node or provider)",
      "cliConfigPrefix": "--l1 ",
      "uiControl": {
        "type": "text"
      },
      "addNodeFlow": "required",
      "defaultValue" : "https://mainnet.infura.io/v3/97fa4206f9bd4ea9957f9a82a2b2e4d0",
      "infoDescription": "eth namespace required",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "l2": {
      "displayName": "Optimism Mainnet RPC Endpoint (local node or provider)",
      "cliConfigPrefix": "--l2 ",
      "uiControl": {
        "type": "text"
      },
      "defaultValue" : "https://optimism-mainnet.infura.io/v3/97fa4206f9bd4ea9957f9a82a2b2e4d0",
      "addNodeFlow": "required",
      "infoDescription": "engine and eth namespace required",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "httpPort": {
      "displayName": "HTTP-RPC server listening port",
      "cliConfigPrefix": "--rpc.port ",
      "defaultValue": "8549",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://geth.ethereum.org/docs/rpc/server#http-server"
    },
    "p2pPorts": {
      "displayName": "P2P port (UDP and TCP)",
      "cliConfigPrefix": "--p2p.listen.tcp ",
      "uiControl": {
        "type": "text"
      },
      "infoDescription": "Example value: 9222",
      "defaultValue": "9222"
    },
    "verifierL1Confs": {
      "displayName": "Max Peer Count (set to low number to use less bandwidth)",
      "cliConfigPrefix": "--verifier.l1-confs ",
      "defaultValue": "4",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    }
  },
  "iconUrl": "https://clientdiversity.org/assets/img/execution-clients/geth-logo.png"
}
