{
  "specId": "op-node",
  "version": "1.0.0",
  "displayName": "OP Node",
  "execution": {
    "executionTypes": ["docker"],
    "defaultExecutionType": "docker",
    "input": {
      "defaultConfig": {
        "l1": "http://host.containers.internal:8545",
        "l2": "http://host.containers.internal:8553",
        "l1TrustRpc": "Enabled",
        "verifierL1Confs": "4"
      },
      "docker": {
        "containerVolumePath": "/root/.ethereum",
        "raw": "-p 8549:8547 -p 9222:9222/tcp -p 9222:9222/udp",
        "forcedRawNodeInput": "--network mainnet --rpc.addr 0.0.0.0 --rpc.port 8547 --l2.jwt-secret /jwtsecret --rollup.config /static/rollup.json"
      }
    },
    "imageName": "us-docker.pkg.dev/oplabs-tools-artifacts/images/op-node:v1.1.3"
  },
  "category": "L2/ConsensusClient",
  "rpcTranslation": "eth-l1-beacon",
  "systemRequirements": {
    "documentationUrl": "https://geth.ethereum.org/docs/interface/hardware",
    "cpu": {
      "cores": 4
    },
    "memory": {
      "minSizeGBs": 16
    },
    "storage": {
      "minSizeGBs": 1600,
      "ssdRequired": true
    },
    "internet": {
      "minDownloadSpeedMbps": 25,
      "minUploadSpeedMbps": 10
    },
    "docker": {
      "required": true
    }
  },
  "configTranslation": {
    "l1TrustRpc": {
      "displayName": "Trust the L1 RPC connection",
      "uiControl": {
        "type": "select/single",
        "controlTranslations": [
          {
            "value": "Enabled",
            "config": "--l1.trustrpc"
          },
          {
            "value": "Disabled"
          }
        ]
      },
      "defaultValue": "Enabled",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "l1": {
      "displayName": "The L1 RPC to sync from",
      "cliConfigPrefix": "--l1 ",
      "uiControl": {
        "type": "text"
      },
      "defaultValue" : "http://host.containers.internal:8545",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "l2": {
      "displayName": "The L2 Engine RPC to authenticate and execute blocks at",
      "cliConfigPrefix": "--l2 ",
      "uiControl": {
        "type": "text"
      },
      "defaultValue" : "http://host.containers.internal:8553",
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    },
    "verifierL1Confs": {
      "displayName": "Max Peer Count (set to low number to use less bandwidth)",
      "cliConfigPrefix": "--verifier.l1-confs ",
      "defaultValue": "4",
      "uiControl": {
        "type": "text"
      },
      "documentation": "https://github.com/jgresham/superhack/blob/main/README.md#op-node-settings"
    }
  },
  "iconUrl": "https://clientdiversity.org/assets/img/execution-clients/geth-logo.png"
}
